{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/env.d.ts",
    "src/renderer/quasar.d.ts",
    "src/renderer/vue.d.ts",
    "src/renderer/**/*",
    "src/renderer/**/*.vue",
    "src/preload/*.d.ts",
    "src/main/**/*", 
    "src/preload/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/renderer/*"],
      "#/*": ["./src/main/*"],
      "$/*": ["./src/common/*"],
      "%/*": ["./prisma/*"],
      "~/*": ["./*"]
    }
  }
}
