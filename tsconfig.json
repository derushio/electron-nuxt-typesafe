{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowJs": true,
    "paths": {
      "@/*": ["./*"],
      "$/*": ["common/*"],
      "%/*": ["prisma/*"],
      // ビルド時のaliasはしない
      "#build/*": [".nuxt/*"]
    }
  },
  "files": ["./types.d.ts"]
}
