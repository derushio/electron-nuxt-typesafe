{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    ".eslintrc.cjs",
    "electron.vite.config.*",
    "src/main/**/*",
    "prisma/**/*",
    "build/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "esModuleInterop": true,
    "types": ["electron-vite/node"],
    "paths": {
      "@/*": ["./src/renderer/*"],
      "#/*": ["./src/main/*"],
      "$/*": ["./src/common/*"],
      "%/*": ["./prisma/*"],
      "~/*": ["./*"]
    }
  }
}
